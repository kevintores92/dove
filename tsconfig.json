{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "script/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],

  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "jsx": "react-jsx",

    "lib": ["ES2022", "DOM"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },

    "types": ["node", "vite/client"],

    "noEmit": true
  }
}
